{
    "manifest_version": 3,
    "name": "arXiv pdf Downloader",
    "version": "3.1",
    "description": "This is a chrome extension to download arXiv papers into google drive.",
    "permissions": [
        "tabs",
        "downloads",
        "identity",
        "declarativeNetRequest",
        "storage",
        "notifications"
    ],
    "host_permissions": [
        "https://arxiv.org/*",
        "https://dl.acm.org/doi/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    },
    "commands": {
        "EventName": {
            "suggested_key": {
                "default": "Ctrl+Shift+B",
                "mac": "Command+B"
            },
            "description": "Download arXiv pdf file into google drive."
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "oauth2": {
        "client_id": "36293396270-ivqrqj7jtpt483ilg06uo1s65eism0h7.apps.googleusercontent.com",
        "scopes": [
            "https://www.googleapis.com/auth/drive"
        ]
    },
    "action": {
        "default_icon": {
            "19": "images/icon_19.png",
            "32": "images/icon_32.png",
            "48": "images/icon_48.png",
            "128": "images/icon_128.png"
        },
        "default_title": "arXiv pdf downloader",
        "default_popup": "popup.html"
    },
    "icons": {
        "19": "images/icon_19.png",
        "32": "images/icon_32.png",
        "48": "images/icon_48.png",
        "128": "images/icon_128.png"
    },
    "declarative_net_request": {
        "rule_resources": [
            {
                "id": "ruleset_1",
                "enabled": true,
                "path": "rules.json"
            }
        ]
    }
}